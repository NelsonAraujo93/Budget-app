<div class="new categories">
  <div class="back-btn">
    <%= link_to users_path do %>
      <i class="fa-solid fa-arrow-left" style="color: #ffffff;"></i>
    <% end %>
  </div>
  <h2 class="main-title">Add new category</h2>
  <%= form_with model: @category, url: categories_path do |form| %>
    <div class="form-item">
      <%= form.text_field :name, class: "input-container", placeholder: "Category name" %>
    </div>
      <div class="form-item">
      <%= form.text_field :icon, class: "input-container", placeholder: "Icon url" %>
    </div>
      
  <button class="form-btn-container">
    <%= form.submit "Save", class: 'form-btn'%>
  </button>
  <% end %>
</div>